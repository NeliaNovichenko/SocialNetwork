@using Microsoft.AspNet.Identity
@model FinalProject.WEB.Models.ChatViewModel
@{
    ViewBag.Title = "Chat";
}

<h2>Chat</h2>

<div style="overflow:scroll; height:800px;">
    @foreach (var message in Model.Messages)
    {
        <p class="text-left" width="40%">@message.User.FirstName: @message.Text</p>
    }

</div>
